<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20" >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_repo_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/github_default"
                android:layout_margin="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_repo_fullname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:textSize="20dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"
                android:gravity="top"
                android:text="Repository Name" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_repo_desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"
                android:text="Repository Description" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_repo_updated"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:textSize="10dp"
                android:textColor="@android:color/black"
                android:gravity="bottom"
                android:text="Repository Updated" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_repo_language"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="65"
                android:textSize="13dp"
                android:text="Language" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_repo_stars"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:gravity="end"
                android:textSize="15dp"
                android:text="Stars" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>